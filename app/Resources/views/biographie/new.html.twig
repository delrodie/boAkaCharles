{% extends 'backend.html.twig' %}

{% block title %}Gestion de la biographie{% endblock %}

{% block body %}
    <section class="content-header">
      <h1>Gestion de la biographie</h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_biographie_index'))}}">Utilisateur</a></li>
        <li class="breadcrumb-item active">Gestion de la biographie</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-warning">
            <div class="box-header text-right">
              <a href="{{ absolute_url(path('backend_biographie_index'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>La biographie</a>
            </div>
            <div class="box-body">
              <div class="row justify-content-center">
                <div class="col-8">
                    {{ form_start(form, {'attr':{'class':'form-horizontal'}}) }}
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Identité</label>
                            <div class="col-sm-12">
                                {{ form_widget(form.titre)}}
                                <span class="help-block">{{ form_errors(form.titre)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-12 control-label text-left">Contenu</label>
                            <div class="col-sm-12">
                                {{ form_widget(form.contenu)}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Mots clés</label>
                            <div class="col-sm-12">
                                {{ form_widget(form.tags)}}
                                <span class="help-block">{{ form_errors(form.tags)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Telecharger l'illustration</label>
                            <div class="col-sm-12">
                                {{ form_widget(form.imageFile)}}
                                <span class="help-block">{{ form_errors(form.imageFile)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Compte facebook</label>
                            <div class="col-sm-12">
                                {{ form_widget(form.facebook)}}
                                <span class="help-block">{{ form_errors(form.facebook)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Compte Twitter</label>
                            <div class="col-sm-12">
                                {{ form_widget(form.twitter)}}
                                <span class="help-block">{{ form_errors(form.twitter)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 control-label text-left"></div>
                            <div class="checkbox col-sm-12">
                                {{ form_widget(form.statut)}}
                                <label for="appbundle_biographie_statut">Activé</label>
                            </div>
                        </div>
                        {{ form_widget(form) }}
                        <div class="box-footer">
                            <button type="reset" class="btn btn-default">Annuler</button>
                            <button type="submit" class="btn btn-info pull-right">Enregistrer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {% stylesheets
        'backend/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.css'
        'backend/tags/tagsinput.css'
        filter='cssrewrite' output='backend/css/editeur.css'
         %}
        <link rel="stylesheet" href="{{ absolute_url(asset_url)}}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {% javascripts 
        'backend/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.js'
        'backend/js/pages/editor.js'
        'backend/tags/tagsinput.js'
        output='backend/js/editeur.js'
    %}  
    <script src="{{ absolute_url(asset_url)}}"></script>
    
    {% endjavascripts %}
{% endblock %}
