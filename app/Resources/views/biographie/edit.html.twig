{% extends 'backend.html.twig' %}

{% block title %}Biographie :: Modifcation de la biographie{% endblock %}

{% block body %}
    <section class="content-header">
      <h1>Modification de la iographie de <span class="badge badge-primary">{{ biographie.titre }}</h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_biographie_index'))}}">Presentation</a></li>
        <li class="breadcrumb-item active">Modification</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-warning">
            <div class="box-header text-right">
              <a href="{{ absolute_url(path('admin_user_index'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Voir la biographie</a>
            </div>
            <div class="box-body">
              <div class="row justify-content-center">
                <div class="col-8">
                    {{ form_start(edit_form, {'attr':{'class':'form-horizontal'}}) }}
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Identité</label>
                            <div class="col-sm-12">
                                {{ form_widget(edit_form.titre)}}
                                <span class="help-block">{{ form_errors(edit_form.titre)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="" class="col-sm-12 control-label text-left">Contenu</label>
                            <div class="col-sm-12">
                                {{ form_widget(edit_form.contenu)}}
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Mots clés</label>
                            <div class="col-sm-12">
                                {{ form_widget(edit_form.tags)}}
                                <span class="help-block">{{ form_errors(edit_form.tags)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Telecharger l'illustration</label>
                            <div class="col-sm-12">
                                {{ form_widget(edit_form.imageFile)}}
                                <span class="help-block">{{ form_errors(edit_form.imageFile)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Compte facebook</label>
                            <div class="col-sm-12">
                                {{ form_widget(edit_form.facebook)}}
                                <span class="help-block">{{ form_errors(edit_form.facebook)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-12 control-label text-left">Compte Twitter</label>
                            <div class="col-sm-12">
                                {{ form_widget(edit_form.twitter)}}
                                <span class="help-block">{{ form_errors(edit_form.twitter)}}</span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-12 control-label text-left"></div>
                            <div class="checkbox col-sm-12">
                                {{ form_widget(edit_form.statut)}}
                                <label for="appbundle_biographie_statut">Activé</label>
                            </div>
                        </div>
                        {{ form_widget(edit_form) }}
                        <div class="box-footer text-right">
                            <a href="{{ absolute_url(path('backend_biographie_index'))}}" class="btn btn-default">Annuler</a>
                            <button type="submit" class="btn btn-info">Modifier</button>
                        </div>
                    {{ form_end(edit_form) }}
                    {{ form_start(delete_form, {'attr': {'onsubmit': 'return confirm("Êtes-vous sur de vouloir supprimer la biographie ?");'}}) }}
                        <input type="submit" value="Supprimer" class="btn btn-danger pull-left">
                    {{ form_end(delete_form) }}
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>

{% endblock %}

{% block stylesheets %}
    {{ parent()}}
    {% stylesheets
        'backend/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.css'
        'backend/tags/tagsinput.css'
        filter='cssrewrite' output='backend/css/editeur.css'
         %}
        <link rel="stylesheet" href="{{ absolute_url(asset_url)}}" />
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent()}}
    {% javascripts 
        'backend/assets/vendor_plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.js'
        'backend/js/pages/editor.js'
        'backend/tags/tagsinput.js'
        output='backend/js/editeur.js'
    %}  
    <script src="{{ absolute_url(asset_url)}}"></script>
    
    {% endjavascripts %}
{% endblock %}
