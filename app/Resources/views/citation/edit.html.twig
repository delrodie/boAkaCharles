{% extends 'backend.html.twig' %}

{% block title %}Modifier la Pensée{% endblock %}

{% block body %}
    <section class="content-header">
      <h1>Modification la Pensée</h1>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend'))}}"><i class="fa fa-home"></i> Accueil</a></li>
        <li class="breadcrumb-item"><a href="{{ absolute_url(path('backend_citation_index'))}}">Citation</a></li>
        <li class="breadcrumb-item active">Modification la Pensée</li>
      </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="box box-warning">
            <div class="box-header text-right">
              <a href="{{ absolute_url(path('backend_citation_index'))}}" class="btn btn-social btn-primary"><i class="fa fa-list"></i>Liste des Pensées</a>
            </div>
            <div class="box-body">
              <div class="row justify-content-center">
                <div class="col-6">
                    {{ form_start(edit_form, {'attr':{'class':'form-horizontal'}}) }}
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">Auteur</label>
                            <div class="col-sm-8">
                                {{ form_widget(edit_form.auteur)}}
                                <span class="help-block">{{ form_errors(edit_form.auteur)}}</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">Oeuvre</label>
                            <div class="col-sm-8">
                                {{ form_widget(edit_form.ouvrage)}}
                                <span class="help-block">{{ form_errors(edit_form.ouvrage)}}</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-4 control-label text-right">Pensée</label>
                            <div class="col-sm-8">
                                {{ form_widget(edit_form.pensee)}}
                                <span class="help-block">{{ form_errors(edit_form.pensee)}}</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-4 control-label text-right"></div>
                            <div class="checkbox col-sm-2">
                                {{ form_widget(edit_form.statut)}}
                                <label for="appbundle_citation_statut">Activé</label>
                            </div>
                        </div>
                        {{ form_widget(edit_form) }}
                        <div class="box-footer text-right">
                            <a href="{{ absolute_url(path('backend_citation_index'))}}" class="btn btn-default">Annuler</a>
                            <button type="submit" class="btn btn-info">Modifier</button>
                        </div>
                    {{ form_end(edit_form) }}
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>

{% endblock %}
